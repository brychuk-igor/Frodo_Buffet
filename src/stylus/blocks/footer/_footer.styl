.footer_block
	padding-top 115px
	padding-bottom 150px
	text-align center
	background bgcolor = #1f1f1f
	position relative
	@media xs
		padding-top 30px
	&:before
		position absolute
		display block
		content ''
		width 0
		height 0
		top -220px
		left 0
		border-left 0 solid transparent
		border-right 675px solid transparent
		border-bottom 220px solid bgcolor 
		
		@media xs
			top -110px
			left 0
			border-right 287px solid transparent
			border-bottom 110px solid bgcolor
		@media sm
			top -125px
			left 0
			border-right 383px solid transparent
			border-bottom 125px solid bgcolor
		@media md
			top -130px
			left 0
			border-right 495px solid transparent
			border-bottom 130px solid bgcolor
		@media lg
			top -150px
			left 0
			border-right 599px solid transparent
			border-bottom 150px solid bgcolor
		@media xl
			top -220px
			left 0
			border-right 799px solid transparent
			border-bottom 220px solid bgcolor
	&:after
		position absolute
		display block
		content ''
		top -220px
		right 0
		width 0
		height 0
		border-right 0 solid transparent
		border-left 675px solid transparent
		border-bottom 220px solid bgcolor
		
		@media xs
			top -110px
			right 0
			border-left 287px solid transparent
			border-bottom 110px solid bgcolor
		@media sm
			top -125px
			right 0
			border-left 383px solid transparent
			border-bottom 125px solid bgcolor
		@media md
			top -130px
			right 0
			border-left 495px solid transparent
			border-bottom 130px solid bgcolor
		@media lg
			top -150px
			right 0
			border-left 599px solid transparent
			border-bottom 150px solid bgcolor
		@media xl
			top -220px
			right 0
			border-left 799px solid transparent
			border-bottom 220px solid bgcolor
				
.footer_block__column
	vertical-align top
	display inline-block
	width 310px
	height 230px
	margin 0 40px
	@media xs
		width 250px
		margin 0 10px
	@media sm
		width 320px
		margin 0 20px
	@media md
		width 250px
		margin 0 20px
	@media md
		width 290px
		margin 0 15px
	@media lg
		width 300px
		margin 0 15px
.column__title_light
	font-size 3.6em
	color #fff
	text-transform uppercase
	@media xs
		font-size 2.0em
	@media sm
		font-size 2.4em
	@media md
		font-size 2.8em
	@media md
		font-size 3.0em
	@media lg
		font-size 3.3em
	
.column__title_light-left
	position relative
	z-index 10
	&:after
		position absolute
		display block
		content ''
		z-index -1
		background url(../img/footer-bg-title-left.png)
		top 0
		left 69px
		height 45px
		width 197px
.column__title_light-center
	position relative
	z-index 10
	&:after
		position absolute
		display block
		content ''
		z-index -1
		background url(../img/footer-bg-title-center.png)
		top 0
		left 40px
		height 45px
		width 276px
		@media xs
			transform scale(0.8)
.column__title_light-right
	position relative
	z-index 10
	&:after
		position absolute
		display block
		content ''
		z-index -1
		background url(../img/footer-bg-title-right.png)
		top 0
		left 47px
		height 45px
		width 243px
		@media xs
			transform scale(0.8)
.column__list
	list-style none
	margin 0
	padding 0
	display inline-block
	text-align left
	margin-top 50px
	margin-right 10px
	vertical-align top
.column__text
	margin-top 50px
	color #fff
	font-size 2.4em	
	line-height 1.5em
	@media xs
		font-size 1.6em
		margin-top 30px
		line-height 1.25em
	@media sm
		font-size 1.8em
		margin-top 35px
		line-height 1.25em
	@media md
