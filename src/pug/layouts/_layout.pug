include ../blocks/_all
doctype html
html
	head
		meta(charset="utf-8")
		block title
			title Jade Layout Template
		meta(name="viewport" content="width=device-width, initial-scale=1")

		- var menu = [{name: 'О нас', id:1}, {name: 'Блог', id:2}, {name: 'Меню', id:3},{name: 'Акции', id:4},{name: 'Доставка', id:5},{name: 'Контакты', id:6},{name: 'Вход', id:7}]



	body
		block params
			- var topMenuClassname = ""
		- var className = ''
		if topMenuClassname
			- className = 'top-menu-' + topMenuClassname
		div(class=className)
			.container
				+b_top_menu(menu)
				+b_logo()
		block content
		link(rel="stylesheet" media="all" href="css/all.css")
		block head_scripts
			//script(src="js/app.js")
			script(src="js/_jquery.min.js")
			script(src="js/_owl.carousel.js")
			script(src="js/_custom.js")
