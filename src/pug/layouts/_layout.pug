include ../blocks/_all
doctype html
html
	head
		meta(charset="utf-8")
		block title
			title Jade Layout Template
		meta(name="viewport" content="width=device-width, initial-scale=1")

		- var menu = [{name: 'О нас', id:1}, {name: 'Блог', id:2}, {name: 'Меню', id:3},{name: 'Акции', id:4},{name: 'Доставка', id:5},{name: 'Контакты', id:6},{name: 'Вход', id:7}]
		- var cat_menu = [{name: 'Бургеры', id:1}, {name: 'Квас', id:2}, {name: 'Мясо', id:3}, {name: 'Десерты', id:4}]

	body#body
		.preloader(style="position:fixed; top:0; bottom:0; left:0; right:0; background:white; z-index:666666")
			.preloader__text(style="position:absolute; top:50%; left:50%; transform: translate(-50%, -50%); background:orange; width:30px; height:30px; border-radius:50%; font-size:1.5em; display:flex; align-items:center; justify-content:center") 
				.preloader__text__value 0%

		block params
			- var topMenuClassname = ""
		- var className = ''
		if topMenuClassname
			- className = 'top-menu-' + topMenuClassname
		div(class=className)
			.container
				+b_top_menu(menu)
				+b_logo()
		block content

		+b_delivery()
		+b_map()
		+b_footer()

		link(rel="stylesheet" media="all" href="css/all.css")
		block head_scripts
		script(src="https://unpkg.com/imagesloaded@4.1/imagesloaded.pkgd.min.js")
		script(src="js/custom.min.js")
