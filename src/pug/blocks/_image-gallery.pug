mixin image-gallery()
	+b.image-gallery
		+e.wrap.container
			h2.title-cross.title-cross_light Галерея
		+e.carousel
			.owl-carousel.owl-theme
				.owl-item
					img(src="img/image_gallery_1.jpg" alt="image_gallery_1")
				.owl-item
					img(src="img/image_gallery_2.jpg" alt="image_gallery_2")
				.owl-item
					img(src="img/image_gallery_3.jpg" alt="image_gallery_3")