.sm_content_block
	margin 70px 60px
	position relative
	padding-left 365px
	min-height 418px

.sm_content_block__pic
	position absolute
	bottom 0
	left 0

.sm_content_block__text
	font-size 2.6 em
	margin 20px 0 80px
	line-height 1.5;

.sm_content_block__link_wrap
	padding 0 0 130px

.sm_content_block__more
	display inline-block
	text-decoration none
	color text-color
	height 84px
	font-size 3.5em
	text-transform uppercase
	line-height 82px
	sm_btn_border = 1px solid #091b21
	border sm_btn_border
	position relative
	padding 0 93px
	margin 0
	&:after
		display block
		position absolute
		content ''
		width 100%
		height 100%
		border sm_btn_border
		left -9px
		top 9px
